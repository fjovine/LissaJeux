<UserControl x:Class="Lissajous.LissaSet"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lissajous"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <local:LissajousPanel x:Name="Lissa" Grid.Column="1" Grid.Row="1"/>
        <local:HorizontalHeadPanel x:Name="HeadX" Grid.Column="0" Grid.Row="1"/>
        <local:HorizontalTailPanel x:Name="TailX" Grid.Column="2" Grid.Row="1"/>
        <local:VerticalHeadPanel x:Name="HeadY" Grid.Column="1" Grid.Row="0" />
        <local:VerticalTailPanel x:Name="TailY" Grid.Column="1" Grid.Row="2" />
    </Grid>
</UserControl>
